# -*- encoding: utf-8 -*-
lib = File.expand_path('../lib/', __FILE__)
$:.unshift lib unless $:.include?(lib)

Gem::Specification.new do |s|
  s.name        = "<%= @config["project"]["name"] %>"
  s.version     = "<%= @config["project"]["version"] %>"
  s.platform    = Gem::Platform::RUBY
  s.authors     = "<%= @config["project"]["authors"] %>"
  s.email       = "<%= @config["project"]["email"] %>"
  s.homepage    = "<%= @config["project"]["homepage"] %>"
  s.summary     = "Sum: <%= @config["gem"]["summary"] %>"
  s.description = "<%= @config["project"]["description"] %>"
  s.required_rubygems_version = ">= 1.3.6"
  s.rubyforge_project = "nowarning"
  s.files        = Dir.glob("{bin/*,lib}/**/*")
  s.require_path = ["lib"]
end